<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Error Notification</title>
  </head>
  <body>
    <table border="0" cellpadding="0" cellspacing="0" class="body">
      <tr>
        <td>&nbsp;</td>
        <td class="container">
          <div class="content">

            <!-- START CENTERED WHITE CONTAINER -->
            <span class="preheader">
              <%= yield :preheader_text %>
            </span>
            <table class="main"><tr><td>
              <!-- START MAIN CONTENT AREA -->
              <h1>Error Notification</h1>
              <%= @error.join("<br />").html_safe %>
              <h5>Submitted By User</h5>
              <br /><br />
              <% @vars.each do |var| %>
                <%= var[0] %>: <%= var[1] %><br />
              <% end -%>
              <h5>Sent to Salesforce</h5>
              <br /><br />
              <% @data.each do |var| %>
                <% if var[1].is_a?(Array) || var[1].is_a?(Hash) %>
                  <% var[1].each do |vvar| %>
                    <%= "#{vvar[0]}: #{vvar[1]}" %><br />
                  <% end -%>
                <% else -%>
                  <%= "#{var[0]}: #{var[1]}" %><br />
                <% end -%>
              <% end -%>
              <!-- END MAIN CONTENT AREA -->
            </td></tr></table>
<!-- END CENTERED WHITE CONTAINER --></div>
        </td>
        <td>&nbsp;</td>
      </tr>
    </table>
  </body>
</html>

